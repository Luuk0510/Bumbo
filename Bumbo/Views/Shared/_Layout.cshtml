@{
    int year = DateTime.Now.Year;
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bumbo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Bumbo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="fixed-top navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-light-yellow shadow-lg">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item me-5">
                            <a class="navbar-brand" href="#">
                                <img src="~/Bumbo_Logo.png" height="35" alt="Bumbo Logo"/>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav justify-content-center flex-grow-1 fw-bold fs-3">
                        <li class="nav-item me-4">
                            <a class="nav-link @("Prognose".Equals(currentController) ? "active" : "")" asp-controller="Prognose" asp-action="Index" asp-route-year="@year"><i class="bi bi-graph-up"></i> Prognose</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link  @("Normering".Equals(currentController) ? "active" : "")" asp-controller="Normering" asp-action="Normering"><i class="bi bi-gear"></i> Normering</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link @("RoosterManager".Equals(currentController) ? "active" : "")" asp-controller="RoosterManager" asp-action="Index" asp-route-year="@year"><i class="bi bi-calendar4-week"></i> Rooster</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link @("Medewerker".Equals(currentController) ? "active" : "")" asp-controller="Medewerker" asp-action="Index"><i class="bi bi-people"></i> Medewerkers</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link @("Filialen".Equals(currentController) ? "active" : "")" asp-controller="Filialen" asp-action="Index"><i class="bi bi-building"></i> Filialen</a>
                        </li>
                        <li class="nav-item me-4 dropdown-center">
                            <a class="nav-link dropdown-toggle @("WeekUrenRegistratie".Equals(currentController) || "MaandUrenRegistratie".Equals(currentController) ? "active" : "")" href="#" id="urenregistratieDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-stopwatch"></i> Urenregistratie
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="urenregistratieDropdown">
                                <li><a class="dropdown-item fw-bold fs-4" asp-controller="WeekUrenRegistratie" asp-action="Index" asp-route-year="@year">Weekoverzicht</a></li>
                                <li><a class="dropdown-item fw-bold fs-4" asp-controller="MaandUrenRegistratie" asp-action="Index" asp-route-year="@year">Maandoverzicht</a></li>
                            </ul>
                        </li>

                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-bold fs-3 @("Authentication".Equals(currentController) ? "active" : "")" asp-controller="Authentication" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Uitloggen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Bumbo
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
